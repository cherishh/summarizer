{
  "manifest_version": 3,
  "name": "GPT Summarizer",
  "version": "1.0",
  "permissions": ["activeTab"],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["Readability.js", "content.js"]
    }
  ]
}
